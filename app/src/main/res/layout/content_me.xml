<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="60dp" android:gravity="center_vertical"
    android:paddingLeft="17dp" android:paddingTop="20dp"
    android:paddingBottom="20dp" android:paddingRight="17dp">

    <ImageView
        android:id="@+id/iv_item_me"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerInside"/>

    <TextView
        android:id="@+id/tv_item_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        style="@style/Base.TextAppearance.AppCompat.Subhead" />
</LinearLayout>